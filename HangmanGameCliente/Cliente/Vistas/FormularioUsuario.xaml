<Page x:Class="HangmanGameCliente.Paginas.FormularioUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGameCliente.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="FormularioUsuario">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente/Recursos/defaultBackground.png"/>
        </Grid.Background>
        <Label Content="Dar de alta perfil" HorizontalAlignment="Left" Margin="410,25,0,0" VerticalAlignment="Top" Height="80" Width="527" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="60" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label Content="Nickname:" HorizontalAlignment="Left" Margin="165,168,0,0" VerticalAlignment="Top" Height="52" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoNickname" HorizontalAlignment="Left" Margin="91,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Nombre completo:" HorizontalAlignment="Left" Margin="735,167,0,0" VerticalAlignment="Top" Height="52" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoNombreCompleto" HorizontalAlignment="Left" Margin="660,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Fecha de nacimiento:" HorizontalAlignment="Left" Margin="130,298,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoFechaNacimiento" HorizontalAlignment="Left" Margin="91,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Teléfono celular:" HorizontalAlignment="Left" Margin="700,294,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoTelefonoCelular" HorizontalAlignment="Left" Margin="662,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Correo electrónico:" HorizontalAlignment="Left" Margin="130,448,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoCorreoElectronico" HorizontalAlignment="Left" Margin="91,510,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Contraseña:" HorizontalAlignment="Left" Margin="700,446,0,0" VerticalAlignment="Top" Height="52" Width="426" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoContrasenia" HorizontalAlignment="Left" Margin="661,516,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="552,604,0,0" VerticalAlignment="Top" Width="182" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="GuardarRegistroUsuario">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="51,23,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="82" Width="156" Click="Regresar">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/backBackground.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
