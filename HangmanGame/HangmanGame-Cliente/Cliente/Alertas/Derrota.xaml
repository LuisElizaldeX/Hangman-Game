<Page x:Class="HangmanGame_Cliente.Cliente.Alertas.Derrota"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Alertas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Derrota">
    <Page.Background>
        <ImageBrush ImageSource="/Cliente/Recursos/defaultBackground.png"/>
    </Page.Background>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400">
        <Image Source="/Cliente/Recursos/allWrongAlert.png" Stretch="Fill" />
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="¡No adivinaste" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="50" Foreground="White" TextAlignment="Center" />
            <TextBlock Text="la palabra!" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="50" Foreground="White" TextAlignment="Center" Margin="0,-10,0,20" />
            <TextBlock Text="¡Oh no! ¡Has sido ahorcado!" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30" Foreground="White" TextAlignment="Center" />
            <TextBlock Text="La palabra era Thriller" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30" Foreground="White" TextAlignment="Center" Margin="0,0,0,30" />
            <Button Content="Aceptar" Width="164" Height="40" FontSize="30" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" Cursor="Hand" Click="Aceptar">
                <Button.Background>
                    <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Page>
