<Window x:Class="HangmanGame_Cliente.Cliente.Alertas.EliminarUsuario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Alertas"
      WindowStyle="None"
      ResizeMode="NoResize"
      SizeToContent="WidthAndHeight"
      WindowStartupLocation="CenterOwner"
      Background="Transparent"
      AllowsTransparency="True"
      ShowInTaskbar="False"
      Topmost="True">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="400">
            <Image Source="/Cliente/Recursos/allWrongAlert.png" Stretch="Fill" />
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock x:Name="txtBlkTituloEliminarUsuario1" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="50" Foreground="White" TextAlignment="Center" Cursor="Hand" Margin="0,-10,0,0" Text="{DynamicResource txtBlkTituloEliminarUsuario1}" />
                <TextBlock x:Name="txtBlkMensajeEliminarUsuario1" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="25" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkMensajeEliminarUsuario1}" />
                <TextBlock x:Name="txtBlkMensajeEliminarUsuario2" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="25" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkMensajeEliminarUsuario2}" />
                <TextBlock x:Name="txtBlkMensajeEliminarUsuario3" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="25" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkMensajeEliminarUsuario3}" />
                <TextBlock x:Name="txtBlkMensajeEliminarUsuario4" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="25" Foreground="White" TextAlignment="Center" Text="{DynamicResource txtBlkMensajeEliminarUsuario4}" />
                <TextBlock x:Name="txtBlkMensajeEliminarUsuario5" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="25" Foreground="White" TextAlignment="Center" Margin="0,0,0,0" Text="{DynamicResource txtBlkMensajeEliminarUsuario5}" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnAceptarEliminarUsuario" Width="120" Height="40" FontSize="25" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="Black" BorderThickness="2" Margin="0,0,10,0" Cursor="Hand" Content="{DynamicResource btnAceptarEliminarUsuario}" Click="btnAceptarEliminarUsuario_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnCancelarEliminarUsuario" Width="120" Height="40" FontSize="25" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="Black" BorderThickness="2" Margin="10,0,0,0" Cursor="Hand"  Content="{DynamicResource btnCancelarEliminarUsuario}" Click="btnCancelarEliminarUsuario_Click">
                        <Button.Background>
                            <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
