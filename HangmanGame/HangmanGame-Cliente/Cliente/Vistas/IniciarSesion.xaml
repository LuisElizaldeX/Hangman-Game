<Page x:Class="HangmanGame_Cliente.Cliente.Vistas.IniciarSesion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="IniciarSesion">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente/Recursos/loginBackground.png"/>
        </Grid.Background>
        <Image HorizontalAlignment="Center" Height="164" Margin="0,29,0,0" VerticalAlignment="Top" Width="776" Source="/Cliente/Recursos/hangmanLogoSPN.png" RenderTransformOrigin="0.784,-0.329"/>
        <Label Content="Correo Electrónico:" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Height="53" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="cuadroTextoCorreo" HorizontalAlignment="Center" Margin="0,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="504" Height="50" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="30"  TextAlignment="Center"  Foreground="White" BorderBrush="{x:Null}" >
            <TextBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="Contraseña:" HorizontalAlignment="Center" Margin="0,358,0,0" VerticalAlignment="Top" Height="53" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <PasswordBox x:Name="cuadroContrasenaContrasena" HorizontalAlignment="Center" Margin="0,420,0,0" VerticalAlignment="Top" Width="500" SelectionBrush="{x:Null}" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" BorderBrush="{x:Null}" FontSize="30" Height="47">
            <PasswordBox.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </PasswordBox.Background>
        </PasswordBox>
        <Button Content="¿No tienes una cuenta? Registrate aquí" HorizontalAlignment="Center" Margin="0,475,0,0" VerticalAlignment="Top" FontFamily="pack://application:,,,/Font/#MedievalSharp" Foreground="White" FontSize="30" Width="560" BorderBrush="{x:Null}" Click="DarAltaUsuario">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Button.Background>
        </Button>
        <Button Content="Entrar" HorizontalAlignment="Center" Margin="0,536,0,0" VerticalAlignment="Top" Width="154" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="InicioSesion">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
