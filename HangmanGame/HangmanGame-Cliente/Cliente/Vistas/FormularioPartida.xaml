<Page x:Class="HangmanGame_Cliente.Cliente.Vistas.FormularioPartida"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="FormularioPartida">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente/Recursos/makingMatchBackground.png"/>
        </Grid.Background>
        <Button x:Name="btnCategoriaMusica" Content="{DynamicResource btnCategoriaMusica}" HorizontalAlignment="Left" Margin="47,193,0,0" VerticalAlignment="Top" Width="182" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="btnCategoriaMusica_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnCategoriaSeries" Content="{DynamicResource btnCategoriaSeries}" HorizontalAlignment="Left" Margin="47,276,0,0" VerticalAlignment="Top" Width="179" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="btnCategoriaSeries_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btnCategoriaPeliculas" Content="{DynamicResource btnCategoriaPeliculas}" HorizontalAlignment="Left" Margin="47,354,0,0" VerticalAlignment="Top" Width="182" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="btnCategoriaPeliculas_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
        <ListView Name="listViewPalabras" Margin="392,175,138,272" BorderBrush="Black" Foreground="#E5000000" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="12" BorderThickness="1,1,1,1" SnapsToDevicePixels="False" d:ItemsSource="{d:SampleData ItemCount=3}">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontFamily" Value="pack://application:,,,/Font/#MedievalSharp"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </ListView.Resources>
            <ListView.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/tableBackground.png"/>
            </ListView.Background>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header=" " Width="230">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Unirse" Width="149" Height="40" 
                         Background="#00008B" Foreground="White" FontSize="16" 
                         FontFamily="pack://application:,,,/Font/#MedievalSharp" FontWeight="Bold" Click="Modificar"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header=" " Width="230">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Unirse" Width="149" Height="40" 
                         Background="#00008B" Foreground="White" FontSize="16" 
                         FontFamily="pack://application:,,,/Font/#MedievalSharp" FontWeight="Bold" Click="Modificar"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header=" " Width="230">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Unirse" Width="149" Height="40" 
                         Background="#00008B" Foreground="White" FontSize="16" 
                         FontFamily="pack://application:,,,/Font/#MedievalSharp" FontWeight="Bold" Click="Modificar"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnCancelarCreacionPartida" Content="{DynamicResource btnCancelarCreacionPartida}" HorizontalAlignment="Left" Margin="538,602,0,0" VerticalAlignment="Top" Width="212" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="btnCancelarCreacionPartida_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
