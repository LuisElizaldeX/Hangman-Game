<Page x:Class="HangmanGame_Cliente.Cliente.Vistas.SalaDeEspera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HangmanGame_Cliente.Cliente.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SalaDeEspera">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Cliente/Recursos/makingMatchBackground.png"/>
        </Grid.Background>
        <Label x:Name="lblTituloSalaEspera" Content="{DynamicResource lblTituloSalaEspera}" HorizontalAlignment="Left" Margin="410,25,0,0" VerticalAlignment="Top" Height="80" Width="527" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="60" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblAnuncioCodigoPartida" Content="{DynamicResource lblAnuncioCodigoPartida}" HorizontalAlignment="Left" Margin="430,148,0,0" VerticalAlignment="Top" Height="52" Width="487" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblCodigoPartida" Content="rbci3415" HorizontalAlignment="Left" Margin="496,217,0,0" VerticalAlignment="Top" Height="52" Width="356" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblPreComenzarPartida1" Content="{DynamicResource lblPreComenzarPartida1}" HorizontalAlignment="Left" Margin="314,291,0,0" VerticalAlignment="Top" Height="52" Width="716" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblPreComenzarPartida2" Content="{DynamicResource lblPreComenzarPartida2}" HorizontalAlignment="Left" Margin="314,342,0,0" VerticalAlignment="Top" Height="52" Width="716" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblJugadorUnido" Content="{DynamicResource lblJugadorUnido}" HorizontalAlignment="Left" Margin="330,442,0,0" VerticalAlignment="Top" Height="52" Width="684" Foreground="White" FontFamily="pack://application:,,,/Font/#MedievalSharp" FontSize="40" HorizontalContentAlignment="Center">
            <Label.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/labelBackground.png"/>
            </Label.Background>
        </Label>
        <Button x:Name="btnCancelarIniciarPartida" Content="{DynamicResource btnCancelarIniciarPartida}" HorizontalAlignment="Left" Margin="582,604,0,0" VerticalAlignment="Top" Width="182" Height="66" FontFamily="pack://application:,,,/Font/#MedievalSharp"  FontSize="40" Foreground="White" BorderBrush="{x:Null}" Click="btnCancelarIniciarPartida_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/Cliente/Recursos/buttonBackground.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
